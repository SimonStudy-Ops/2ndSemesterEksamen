@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject AuthService Auth

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BasementClient</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>-+
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Varelager">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Basements Lager
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Adminstration">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Bruger Adminstration
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private string? username;
    private bool subscribed = false;

    protected override async Task OnInitializedAsync()
    {
        username = await Auth.GetUser();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !subscribed)
        {
            Auth.OnChange += HandleAuthChanged;
            subscribed = true;
        }
    }

    private async void HandleAuthChanged()
    {
        username = await Auth.GetUser();
        InvokeAsync(StateHasChanged);
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task Logout()
    {
        await Auth.Logout();
        username = null;
        Navigation.NavigateTo("/login", true);
    }
}