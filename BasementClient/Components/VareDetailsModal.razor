@using BasementClient.Pages
@using Core.Models

@if (Show && SelectedVare != null)
{
    <div class="modal" style="display:block; background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Vare Detaljer</h5>
                    <button type="button" class="btn-close" @onclick="OnClose"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <strong>Vare Navn:</strong>
                        <p>@SelectedVare.Navn</p>
                    </div>
                    
                    <div class="mb-3">
                        <strong>Billede:</strong>
                        <p>@SelectedVare.Billede</p>
                    </div> 
                    <div class="mb-3">
                        <strong>Beskrivelse:</strong>
                        <p>@SelectedVare.Beskrivelse</p>
                    </div>

                    <div class="mb-3">
                        <strong>Enhed:</strong>
                        <p>@SelectedVare.Enhed</p>
                    </div>

                    <div class="mb-3">
                        <strong>Udløbsdato:</strong>
                        <p>@SelectedVare.Udløbsdato.ToString("dd-MM-yyyy")</p>
                    </div>

                    <div class="mb-3">
                        <strong>Kategori:</strong>
                        <p>@SelectedVare.Kategorier?.kategoriNavn</p>
                    </div>

                    <div class="mb-3">
                        <strong>Lokaliteter og Mængder:</strong>
                        @if (SelectedBeholdninger != null && SelectedBeholdninger.Any())
                        {
                            <table class="table table-sm">
                                <thead>
                                <tr>
                                    <th>Lokalitet</th>
                                    <th>Mængde</th>
                                    <th>Handling</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var beholdning in SelectedBeholdninger)
                                {
                                    <tr>
                                        <td>@(beholdning.Lokalitet?. LokationNavn ?? "Ingen lokation")</td>
                                        <td>@beholdning.Mængde</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" @onclick="() => OnEdit.InvokeAsync(beholdning)">
                                                Rediger
                                            </button>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                            <p><strong>Total: @SelectedBeholdninger.Sum(b => b.Mængde)</strong></p>
                        }
                        else
                        {
                            <p>Ingen beholdninger fundet</p>
                        }
                    </div>
                           
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="OnClose">Luk</button>
                    </div>
                </div>
            </div>
        </div>
        
}

@code {
    [Parameter]
    public bool Show { get; set; }

    [Parameter]
    public Varer? SelectedVare { get; set; }

    [Parameter]
    public List<VarerBeholdning>? SelectedBeholdninger { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback<VarerBeholdning> OnEdit { get; set; }
}