@page "/kategoristyring"
@inject HttpClient Http
@inject AuthService Auth
@using Core.Models

<PageTitle>Kategoristyring</PageTitle>

<h3>Kategoristyring</h3>

@if (! isAdmin)
{
    <p>Du har ikke adgang til denne side. </p>
}
else
{
    <button class="btn btn-primary mb-3" @onclick="OpenCreateDialog">Ny Kategori</button>

    @if (kategorier == null)
    {
        <p><em>Indl√¶ser...</em></p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kategorinavn</th>
                    <th>Handlinger</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kat in kategorier)
                {
                    <tr>
                        <td>@kat.kategoriNavn</td>
                        <td>
                            <button class="btn btn-danger btn-sm" @onclick="() => DeleteKategori(kat.kategoriNavn)">Slet</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

<!-- Dialog til at oprette ny kategori -->
@if (showCreateDialog)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Opret Ny Kategori</h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateDialog"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Kategorinavn</label>
                        <input type="text" class="form-control" @bind="newKategori.kategoriNavn" placeholder="Fx: Vin, Snacks..." />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseCreateDialog">Annuller</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveNewKategori">Gem</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Kategorier>? kategorier;
    private bool isAdmin = false;
    private bool showCreateDialog = false;
    private Kategorier newKategori = new Kategorier();

    protected override async Task OnInitializedAsync()
    {
        isAdmin = Auth.IsAdmin();
        if (isAdmin)
        {
            await LoadKategorier();
        }
    }

    private async Task LoadKategorier()
    {
        try
        {
            kategorier = await Http.GetFromJsonAsync<List<Kategorier>>("api/kategorier");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fejl ved hentning af kategorier: {ex.Message}");
            kategorier = new List<Kategorier>();
        }
    }

    private void OpenCreateDialog()
    {
        newKategori = new Kategorier();
        showCreateDialog = true;
    }

    private void CloseCreateDialog()
    {
        showCreateDialog = false;
    }

    private async Task SaveNewKategori()
    {
        if (string.IsNullOrWhiteSpace(newKategori.kategoriNavn))
        {
            return;
        }

        try
        {
            var response = await Http.PostAsJsonAsync("api/kategorier", newKategori);
            if (response.IsSuccessStatusCode)
            {
                await LoadKategorier();
                CloseCreateDialog();
            }
        }
        catch (Exception ex)
        {
            Console. WriteLine($"Fejl ved oprettelse af kategori: {ex.Message}");
        }
    }

    private async Task DeleteKategori(string kategoriNavn)
    {
        if (! string.IsNullOrEmpty(kategoriNavn))
        {
            try
            {
                var response = await Http.DeleteAsync($"api/kategorier/{kategoriNavn}");
                if (response.IsSuccessStatusCode)
                {
                    await LoadKategorier();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Fejl ved sletning af kategori: {ex.Message}");
            }
        }
    }
}